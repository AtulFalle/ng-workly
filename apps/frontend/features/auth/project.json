{
  "name": "authenticationUi",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/frontend/features/auth/src",
  "tags": ["app:remote:auth"],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/frontend/features/auth",
        "index": "apps/frontend/features/auth/src/index.html",
        "main": "apps/frontend/features/auth/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/frontend/features/auth/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/frontend/features/auth/public"
          }
        ],
        "styles": ["apps/frontend/features/auth/src/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": [
            "dist/libs/src"
          ]
        },
        "customWebpackConfig": {
          "path": "apps/frontend/features/auth/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/frontend/features/auth/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4201,
        "publicHost": "http://localhost:4201"
      },
      "configurations": {
        "production": {
          "buildTarget": "authenticationUi:build:production"
        },
        "development": {
          "buildTarget": "authenticationUi:build:development"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["workly-ui:serve"]
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "authenticationUi:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend/features/auth/jest.config.ts",
        "tsConfig": "apps/frontend/features/auth/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "authenticationUi:build",
        "port": 4201,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "authenticationUi:build:development"
        },
        "production": {
          "buildTarget": "authenticationUi:build:production"
        }
      }
    },
    "quality:smells": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run authenticationUi:lint"
      }
    },
    "quality:security": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run security:audit"
      }
    },
    "quality:vulnerabilities": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Dependency analysis handled by npm audit and audit-ci'"
      }
    }
  }
}
