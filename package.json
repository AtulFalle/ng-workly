{
  "name": "@workly/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run start:shell",
    "start:shell": "nx serve workly-ui",
    "start:auth": "nx serve authenticationUi",
    "start:all": "concurrently \"npm run start:shell\" \"npm run start:auth\"",
    "build": "npm run build:all",
    "build:shell": "nx build workly-ui",
    "build:auth": "nx build authenticationUi",
    "build:libs": "nx build ui && nx build ui-component",
    "build:all": "npm run build:libs && npm run build:shell && npm run build:auth",
    "test": "nx test",
    "test:shell": "nx test workly-ui",
    "test:auth": "nx test authenticationUi",
    "test:libs": "nx test ui && nx test ui-component",
    "lint": "nx lint",
    "lint:shell": "nx lint workly-ui",
    "lint:auth": "nx lint authenticationUi",
    "lint:libs": "nx lint ui && nx lint ui-component",
    "clean": "nx reset",
    "dev": "npm run start:all",
    "quality:smells": "nx run-many -t lint --all --parallel",
    "quality:security": "npm run security:audit && npm run security:check",
    "quality:vulnerabilities": "echo 'Dependency analysis handled by npm audit and audit-ci'",
    "quality:static": "npx dependency-check --unused",
    "quality:all": "npm run quality:smells && npm run quality:security && npm run quality:vulnerabilities",
    "quality:ci": "npm run quality:all && npm run quality:static",
    "security:audit": "npm audit --audit-level=high",
    "security:check": "npx audit-ci --config audit-ci.json",
    "security:fix": "npm audit fix",
    "deps:check": "npx dependency-check --missing",
    "deps:unused": "npx dependency-check --unused",
    "deps:circular": "npx dependency-check --circular",
    "complexity:check": "npx eslint --ext .ts,.js src/ --format json | npx complexity-report",
    "complexity:visual": "npx madge --image graph.svg src/",
    "bundle:analyze": "npx webpack-bundle-analyzer dist/apps/frontend/shell/workly/main.*.js",
    "bundle:size": "npx bundlesize",
    "coverage:check": "nx run-many -t test --all && npm run coverage:threshold",
    "coverage:threshold": "npx nyc report --reporter=text-summary --check-coverage --lines 80 --functions 80 --branches 80 --statements 80"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "~20.3.0",
    "@angular/common": "~20.3.0",
    "@angular/compiler": "~20.3.0",
    "@angular/core": "~20.3.0",
    "@angular/forms": "~20.3.0",
    "@angular/platform-browser": "~20.3.0",
    "@angular/platform-browser-dynamic": "~20.3.0",
    "@angular/platform-server": "~20.3.0",
    "@angular/router": "~20.3.0",
    "@angular/ssr": "~20.3.0",
    "@nx/angular": "21.6.6",
    "express": "^4.21.2",
    "rxjs": "~7.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/core": "~20.3.0",
    "@angular-devkit/schematics": "~20.3.0",
    "@angular/animations": "^20.3.6",
    "@angular/build": "~20.3.0",
    "@angular/cli": "~20.3.0",
    "@angular/compiler-cli": "~20.3.0",
    "@angular/language-service": "~20.3.0",
    "@eslint/js": "^9.8.0",
    "@module-federation/enhanced": "^0.18.0",
    "@nx/eslint": "21.6.6",
    "@nx/eslint-plugin": "21.6.6",
    "@nx/jest": "21.6.6",
    "@nx/js": "22.0.1",
    "@nx/module-federation": "21.6.6",
    "@nx/web": "22.0.1",
    "@nx/webpack": "21.6.6",
    "@nx/workspace": "21.6.6",
    "@primeuix/themes": "^1.2.5",
    "@schematics/angular": "~20.3.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@typescript-eslint/utils": "^8.40.0",
    "angular-eslint": "^20.3.0",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.0",
    "dependency-check": "^4.1.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "~14.6.1",
    "jest-util": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "ng-packagr": "~20.3.0",
    "nx": "21.6.6",
    "postcss": "^8.4.5",
    "postcss-url": "~10.1.3",
    "prettier": "^2.6.2",
    "primeicons": "^7.0.0",
    "primeng": "^20.2.0",
    "semgrep": "^0.0.1",
    "snyk": "^1.1300.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
