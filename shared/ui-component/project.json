{
  "name": "ui-component",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "shared/ui-component/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["shared:ui:component"],
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "shared/ui-component/ng-package.json",
        "tsConfig": "shared/ui-component/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "shared/ui-component/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "shared/ui-component/jest.config.ts",
        "tsConfig": "shared/ui-component/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "quality:smells": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run ui-component:lint"
      }
    },
    "quality:security": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run security:audit"
      }
    },
    "quality:vulnerabilities": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Dependency analysis handled by npm audit and audit-ci'"
      }
    }
  }
}
